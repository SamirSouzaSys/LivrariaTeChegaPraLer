<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <servlet>
        <servlet-name>Autenticacao</servlet-name>
        <servlet-class>controller.ServletAutenticacao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Autenticacao</servlet-name>
        <url-pattern>/autenticacao</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>controller.ServletLivros</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <!-- <welcome-file-list>
        <welcome-file>/listaLivros</welcome-file>
    </welcome-file-list> -->

    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

</web-app>